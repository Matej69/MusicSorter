<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/categoryName_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I DID IT FATHER, I DID IT"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/emoticonImage_id"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:autoText="false"
        android:textAlignment="center"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:layout_alignBottom="@+id/emoticonImage_id"
        android:gravity="center_vertical"
        android:textStyle="bold"
        android:textColor="#4a0000" />

    <ImageButton
        android:id="@+id/emoticonImage_id"
        android:src="@drawable/emoticon_skull"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

